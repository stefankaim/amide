{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build AMIDE (auto)",
      "type": "shell",
      "command": "${env:OS} == 'Windows_NT' ? '/mingw64/bin/mingw32-make' : 'make'",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
      }
    }
  ]
}

